{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "declaration": true
  },
  "exclude": ["dist", "node_modules"]
}
